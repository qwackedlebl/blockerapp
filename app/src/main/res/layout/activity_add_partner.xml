<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Main Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Toolbar -->
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:elevation="4dp"
            app:title="Add Partner" />

        <!-- Content -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Add Partner Widget -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardElevation="4dp"
                    app:cardCornerRadius="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Add Accountability Partner"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:paddingBottom="8dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Enter your friend's name and their device secret key. They will generate codes to unlock your apps."
                            android:textSize="14sp"
                            android:textColor="@android:color/darker_gray"
                            android:paddingBottom="12dp" />

                        <!-- Name Input -->
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/nameInputLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp"
                            app:errorEnabled="true">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/nameInput"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Johnny Appleseed"
                                android:inputType="textPersonName" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <!-- Secret Key Input -->
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/secretKeyInputLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp"
                            app:errorEnabled="true">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/secretKeyInput"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Friend's Secret Key"
                                android:inputType="textNoSuggestions|textCapCharacters" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <!-- Save Button -->
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnSave"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Save"
                            android:backgroundTint="#4CAF50"
                            app:icon="@android:drawable/ic_menu_save" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Saved Partners List -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="4dp"
                    app:cardCornerRadius="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Saved Accountability Partners"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:paddingBottom="8dp" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/partnersRecyclerView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:nestedScrollingEnabled="false" />

                        <TextView
                            android:id="@+id/emptyStateText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="No accountability partners added yet."
                            android:textSize="14sp"
                            android:textColor="@android:color/darker_gray"
                            android:gravity="center"
                            android:padding="16dp"
                            android:visibility="gone" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

    <!-- Drawer -->
    <LinearLayout
        android:id="@+id/left_drawer"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:orientation="vertical"
        android:background="@drawable/drawer_background"
        android:padding="24dp"
        android:layout_margin="8dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Menu"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingBottom="12dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e0e0e0"
            android:layout_marginBottom="12dp" />

        <TextView
            android:id="@+id/nav_accountability_partners"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Accountability Partners"
            android:textSize="16sp"
            android:padding="12dp"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground" />

        <TextView
            android:id="@+id/nav_my_apps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="My Apps"
            android:textSize="16sp"
            android:padding="12dp"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground" />

        <TextView
            android:id="@+id/nav_device_secret"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Device Secret Key"
            android:textSize="16sp"
            android:padding="12dp"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground" />

        <TextView
            android:id="@+id/nav_add_partner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Partner"
            android:textSize="16sp"
            android:padding="12dp"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground" />

        <TextView
            android:id="@+id/nav_how_it_works"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="How It Works"
            android:textSize="16sp"
            android:padding="12dp"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>
