<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:fillViewport="true">

<LinearLayout
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="32dp">

    <!-- Lock Icon -->
    <ImageView
        android:id="@+id/lockIcon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/ic_lock"
        android:contentDescription="@string/app_locked"
        app:tint="@android:color/white" />

    <!-- App Locked Message -->
    <TextView
        android:id="@+id/appLockedText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_locked"
        android:textSize="24sp"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:layout_marginTop="24dp" />

    <!-- Blocked App Name -->
    <TextView
        android:id="@+id/blockedAppName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="App Name"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:layout_marginTop="8dp" />

    <!-- Blocked Package Name -->
    <TextView
        android:id="@+id/blockedPackageName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="com.example.app"
        android:textSize="14sp"
        android:textColor="@android:color/darker_gray"
        android:layout_marginTop="4dp" />

    <!-- Unlock Message -->
    <TextView
        android:id="@+id/unlockMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This app is locked."
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:layout_marginTop="32dp" />

    <!-- TOTP Input Layout -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/totpInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="24dp"
        app:errorEnabled="true"
        android:visibility="gone">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/codeInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/enter_code"
            android:textAlignment="center"
            android:textSize="24sp"
            android:inputType="number"
            android:maxLength="6"
            app:boxBackgroundColor="@android:color/white" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Verify Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/verifyButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/verify_unlock"
        android:layout_marginTop="16dp" />

    <!-- Current Code Text -->
    <TextView
        android:id="@+id/currentCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Debug: 123456"
        android:textSize="12sp"
        android:textColor="@android:color/holo_green_light"
        android:layout_marginTop="16dp"
        android:visibility="gone" />

</LinearLayout>

</ScrollView>
