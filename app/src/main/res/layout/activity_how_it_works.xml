<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Main Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Toolbar -->
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:elevation="4dp"
            app:title="How It Works"
            app:titleTextColor="@android:color/white" />

        <!-- Content -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

            <TextView
                android:id="@+id/contentText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:lineSpacingMultiplier="1.5" />

        </ScrollView>

    </LinearLayout>

    <!-- Drawer -->
    <LinearLayout
        android:id="@+id/left_drawer"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:orientation="vertical"
        android:background="@drawable/drawer_background"
        android:padding="24dp"
        android:layout_margin="8dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Menu"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingBottom="12dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e0e0e0"
            android:layout_marginBottom="12dp" />

        <TextView
            android:id="@+id/nav_accountability_partners"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Accountability Partners"
            android:textSize="16sp"
            android:padding="12dp"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground" />

        <TextView
            android:id="@+id/nav_my_apps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="My Apps"
            android:textSize="16sp"
            android:padding="12dp"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground" />

        <TextView
            android:id="@+id/nav_device_secret"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="My Secret Key"
            android:textSize="16sp"
            android:padding="12dp"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground" />

        <TextView
            android:id="@+id/nav_add_partner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Partner"
            android:textSize="16sp"
            android:padding="12dp"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            android:visibility="gone" />

        <TextView
            android:id="@+id/nav_how_it_works"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="How It Works"
            android:textSize="16sp"
            android:padding="12dp"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            android:visibility="gone" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>
