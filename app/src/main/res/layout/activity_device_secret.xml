<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Main Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Toolbar -->
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:elevation="4dp"
            app:title="Device Secret Key"
            app:titleTextColor="@android:color/white" />

        <!-- Content -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Device Secret Key Widget -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardElevation="4dp"
                    app:cardCornerRadius="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Your Device Secret Key"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:paddingBottom="8dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Share this key with your accountability partner so they can generate codes for you."
                            android:textSize="14sp"
                            android:textColor="@android:color/darker_gray"
                            android:paddingBottom="12dp" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:endIconMode="none">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/deviceSecretKeyText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Your Secret Key"
                                android:inputType="textNoSuggestions"
                                android:enabled="false"
                                android:textIsSelectable="true"
                                android:textSize="14sp" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnCopySecret"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Copy Secret Key"
                            android:layout_marginTop="8dp"
                            app:icon="@android:drawable/ic_menu_share" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

    <!-- Drawer -->
    <LinearLayout
        android:id="@+id/left_drawer"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:orientation="vertical"
        android:background="@drawable/drawer_background"
        android:padding="24dp"
        android:layout_margin="8dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Menu"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingBottom="12dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e0e0e0"
            android:layout_marginBottom="12dp" />

        <TextView
            android:id="@+id/nav_accountability_partners"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Accountability Partners"
            android:textSize="16sp"
            android:padding="12dp"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground" />

        <TextView
            android:id="@+id/nav_my_apps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="My Apps"
            android:textSize="16sp"
            android:padding="12dp"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground" />

        <TextView
            android:id="@+id/nav_device_secret"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Device Secret Key"
            android:textSize="16sp"
            android:padding="12dp"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground" />

        <TextView
            android:id="@+id/nav_add_partner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Partner"
            android:textSize="16sp"
            android:padding="12dp"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            android:visibility="gone" />

        <TextView
            android:id="@+id/nav_how_it_works"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="How It Works"
            android:textSize="16sp"
            android:padding="12dp"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            android:visibility="gone" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>
