<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Main Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Toolbar -->
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:elevation="4dp"
            app:title="Accountability Partners" />

        <!-- Search Bar -->
        <SearchView
            android:id="@+id/searchView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:queryHint="Search friends..."
            android:iconifiedByDefault="false"
            android:layout_margin="8dp" />

        <!-- Partners List -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/partnersRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:clipToPadding="false" />

        <!-- Empty State -->
        <TextView
            android:id="@+id/emptyStateText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="No accountability partners added yet.\n\nAdd partners from the menu to see their TOTP codes here."
            android:textSize="16sp"
            android:textColor="@android:color/darker_gray"
            android:gravity="center"
            android:padding="32dp"
            android:visibility="gone" />

    </LinearLayout>

    <!-- Left-side drawer -->
    <LinearLayout
        android:id="@+id/left_drawer"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:orientation="vertical"
        android:background="@drawable/drawer_background"
        android:padding="24dp"
        android:layout_margin="8dp">

        <TextView
            android:id="@+id/drawer_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Menu"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingBottom="12dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e0e0e0"
            android:layout_marginBottom="12dp" />

        <TextView
            android:id="@+id/nav_accountability_partners"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Accountability Partners"
            android:textSize="16sp"
            android:padding="12dp"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground" />

        <TextView
            android:id="@+id/nav_my_apps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="My Apps"
            android:textSize="16sp"
            android:padding="12dp"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground" />

        <TextView
            android:id="@+id/nav_device_secret"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Device Secret Key"
            android:textSize="16sp"
            android:padding="12dp"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground" />

        <TextView
            android:id="@+id/nav_add_partner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Partner"
            android:textSize="16sp"
            android:padding="12dp"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground" />

        <TextView
            android:id="@+id/nav_how_it_works"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="How It Works"
            android:textSize="16sp"
            android:padding="12dp"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground" />

        <!-- Spacer to push items to top -->
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>
