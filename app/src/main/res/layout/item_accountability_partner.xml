<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="12dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Main Content -->
        <LinearLayout
            android:id="@+id/mainContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Top Row: Partner Name and Settings Button -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp">

                <TextView
                    android:id="@+id/partnerName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:text="Partner Name"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black" />

                <!-- Settings Button (similar to lock button style) -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:orientation="vertical"
                    android:gravity="center">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnSettings"
                        style="@style/Widget.Material3.Button.IconButton"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:contentDescription="Settings"
                        app:icon="@android:drawable/ic_menu_preferences"
                        app:iconTint="@android:color/black"
                        app:iconGravity="textStart"
                        android:padding="6dp"
                        android:insetLeft="0dp"
                        android:insetRight="0dp"
                        app:backgroundTint="#E0E0E0" />

                </LinearLayout>

            </RelativeLayout>

        <!-- TOTP Code and Timer Row -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- TOTP Code -->
            <LinearLayout
                android:id="@+id/codeContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Current Code"
                    android:textSize="12sp"
                    android:textColor="@android:color/darker_gray" />

                <TextView
                    android:id="@+id/totpCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:fontFamily="monospace"
                    android:text="000000"
                    android:textColor="#000000"
                    android:textSize="32sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <!-- Timer Circle -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:orientation="vertical"
                android:gravity="center">

                <ProgressBar
                    android:id="@+id/timerProgress"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:indeterminate="false"
                    android:max="30"
                    android:progress="15"
                    android:progressDrawable="@drawable/circular_progress" />

                <TextView
                    android:id="@+id/timerText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15s"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/holo_green_dark"
                    android:layout_marginTop="-48dp" />

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

    <!-- Settings Overlay (hidden by default) -->
    <LinearLayout
        android:id="@+id/settingsOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:padding="16dp"
        android:visibility="gone">

        <!-- Top Row: Settings gear icon in same position -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:text="Settings"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/black" />

            <!-- Settings Button in same position as main view -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSettingsOverlay"
                style="@style/Widget.Material3.Button.IconButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:contentDescription="Close Settings"
                app:icon="@android:drawable/ic_menu_preferences"
                app:iconTint="@android:color/black"
                app:iconGravity="textStart"
                android:padding="6dp"
                android:insetLeft="0dp"
                android:insetRight="0dp"
                app:backgroundTint="#E0E0E0" />

        </RelativeLayout>

        <!-- Spacer to push buttons to center vertically -->
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!-- Buttons Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <!-- Super Secret Key Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSuperSecretOverlay"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Super Secret Key"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                app:icon="@android:drawable/ic_dialog_info"
                app:iconTint="@android:color/white"
                app:backgroundTint="#FF5722"
                android:layout_marginEnd="4dp"
                android:padding="8dp" />

            <!-- Delete Partner Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDeletePartner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Delete Partner"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                app:icon="@android:drawable/ic_menu_delete"
                app:iconTint="@android:color/white"
                app:backgroundTint="#D32F2F"
                android:layout_marginStart="4dp"
                android:padding="8dp" />

        </LinearLayout>

        <!-- Spacer to push buttons to center vertically -->
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

    </LinearLayout>

    </FrameLayout>

</com.google.android.material.card.MaterialCardView>
